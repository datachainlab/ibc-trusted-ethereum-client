{
  "name": "contract",
  "version": "1.0.0",
  "scripts": {
    "migrate": "truffle migrate --reset",
    "compile": "run-s compile:ibc copy:ibc",
    "compile:ibc": "cd node_modules/@hyperledger-labs/yui-ibc-solidity && truffle compile",
    "copy:ibc": "cpx \"node_modules/@hyperledger-labs/yui-ibc-solidity/build/contracts/*.json\" build/contracts -v",
    "postinstall": "run-s compile",
    "clean": "rimraf build"
  },
  "dependencies": {
    "@hyperledger-labs/yui-ibc-solidity": "hyperledger-labs/yui-ibc-solidity.git#601d9e76a85933166795ddb01b70fd99d6a2a81e",
    "@truffle/hdwallet-provider": "1.4.1",
    "truffle": "^5.1.65",
    "truffle-contract-size": "^2.0.1"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
